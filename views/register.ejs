<%- include('partials/header') %>
<div class="container mt-5">
<h1><em>Register</em></h1>


  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email"><h2>Username</h2></label>
              <!-- <input type="text" class="form-control" name="username" placeholder="Username" required="true"> -->
              <input type="text" class="form-control" name="username" pattern=".{6,}" placeholder="Username" required="true" title="Must contain at least 6 or more characters">
            </div>
            <div class="form-group">
              <label for="password"><h2>Password</h2></label>
              <!-- <input type="password" class="form-control" name="password" placeholder="Passwaord" required="true"> -->
                <input type="password" class="form-control" id="pwd" name="password" placeholder="Passwaord" required="true" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters">
            </div>
            <button type="submit" class="btn btn-dark btn-side" onclick="myfunction"><h5>Register</h5></button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            <h5>Sign Up with Google</h5>
          </a>
        </div>
        <a class="btn btn-light btn-index btn-lg" href="/login" role="button"><h5>Login</h5></a>
      </div>
    </div>

  </div>
</div>

<script>
  function myFunction() {
  alert("I am an alert box!");
}
</script>
<%- include('partials/header') %>
